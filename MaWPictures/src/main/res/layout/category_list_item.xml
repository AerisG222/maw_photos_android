<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_list_item_height"
    android:padding="@dimen/category_list_item_padding">

    <ImageView
        android:id="@+id/thumbnailImageView"
        android:layout_width="@dimen/category_list_thumbnail_size"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/category_list_thumbnail_margin_end"
        android:layout_centerVertical="true"
        android:contentDescription="@string/li_category_thumbnail_description"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/categoryNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumbnailImageView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_dark" />

</RelativeLayout>
