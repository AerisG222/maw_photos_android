<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="us.mikeandwan.photos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- these are now only needed to allow for cleaning up historical crap - and maybe sharing -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MawApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="false"
        android:fullBackupContent="@xml/backupscheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.mode.ModeSelectionActivity"
            android:label="@string/title_activity_mode_selection"
            android:screenOrientation="fullSensor" />

        <activity
            android:name=".ui.photos.PhotoListActivity"
            android:label="@string/title_activity_photo_list"
            android:screenOrientation="fullSensor"
            android:noHistory="true" />

        <activity
            android:name=".ui.categories.CategoryListActivity"
            android:label="@string/title_activity_category_list"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.mode.ModeSelectionActivity" />
        </activity>

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service
            android:name=".services.poller.MawPollerService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_poller_name" />

        <receiver android:name=".services.poller.MawScheduleReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".services.poller.MawStartReceiver" />

        <provider
            android:name="com.commonsware.cwac.provider.StreamProvider"
            android:authorities="us.mikeandwan.streamprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="com.commonsware.cwac.provider.STREAM_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>


</manifest>
