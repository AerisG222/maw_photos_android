<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="us.mikeandwan.photos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- these are now only needed to allow for cleaning up historical crap - and maybe sharing -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MawApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="false"
        android:fullBackupContent="@xml/backupscheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".activities.LoginActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ModeSelectionActivity_"
            android:label="@string/title_activity_mode_selection" />

        <activity
            android:name=".activities.PhotoListActivity_"
            android:label="@string/title_activity_photo_list" />

        <activity
            android:name=".activities.CategoryListActivity_"
            android:label="@string/title_activity_category_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="us.mikeandwan.photos.activities.ModeSelectionActivity_" />
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service
            android:name=".services.poller.MawPollerService_"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_poller_name" />

        <receiver android:name=".services.poller.MawScheduleReceiver_" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".services.poller.MawStartReceiver_" />

        <provider
            android:name="com.commonsware.cwac.provider.StreamProvider"
            android:authorities="us.mikeandwan.streamprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="com.commonsware.cwac.provider.STREAM_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>


</manifest>
