<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uinew.ui.random.RandomFragment">

    <data>
        <variable
            name="viewModel"
            type="us.mikeandwan.photos.uinew.ui.random.RandomViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentPhotoGrid"
            android:name="us.mikeandwan.photos.uinew.ui.imagegrid.ImageGridFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:imageGridThumbnailSize="@{ viewModel.gridItemThumbnailSize }"
            app:imageGridPhotoList="@{ viewModel.photos }"
            app:imageGridClickHandler="@{ viewModel.onPhotoClicked }"/>

    </FrameLayout>
</layout>
