<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uinew.ui.navigationrail.NavigationRailFragment">

    <data>
        <import type="us.mikeandwan.photos.R" />
        <variable
            name="viewModel"
            type="us.mikeandwan.photos.uinew.ui.navigationrail.NavigationRailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_rail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/navigation_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:paddingBottom="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:onClick="@{ () -> viewModel.requestNavigation(R.id.navigation_categories) }"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@{ viewModel.categoryButtonColor }"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/navigation_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle"
            android:paddingBottom="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:onClick="@{ () -> viewModel.requestNavigation(R.id.navigation_random) }"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@{ viewModel.randomButtonColor }"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigation_categories" />


        <ImageView
            android:id="@+id/navigation_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_outline"
            android:paddingBottom="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:onClick="@{ () -> viewModel.requestNavigation(R.id.navigation_about) }"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@{ viewModel.aboutButtonColor }"
            app:layout_constraintBottom_toTopOf="@+id/navigation_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/navigation_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:paddingBottom="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:onClick="@{ () -> viewModel.requestNavigation(R.id.navigation_settings) }"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@{ viewModel.settingsButtonColor }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
