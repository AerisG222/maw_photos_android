<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screens.search.SearchFragment">

    <data>
        <variable
            name="viewModel"
            type="us.mikeandwan.photos.ui.screens.search.SearchViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentPhotoGrid"
            android:name="us.mikeandwan.photos.ui.controls.imagegrid.ImageGridFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:imageGridThumbnailSize="@{ viewModel.gridItemThumbnailSize }"
            app:imageGridSearchResultList="@{ viewModel.searchResults }"
            app:imageGridClickHandler="@{ viewModel.onCategoryClicked }"/>

    </LinearLayout>
</layout>
